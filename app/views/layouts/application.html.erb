<!DOCTYPE html>
<html>
<head>
  <title>TestGuru</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">
  <% if logged_in? %>
      <div class="nav user">
        <%= link_to 'TestGuru', root_path %> |
        <%= link_to 'Log out', logout_path, method: :delete %>
        <p>Welcome, <b><%= current_user.name %></b> Guru
        </p>
      </div>
      <% else %>
      <div class="nav user">
        <%= link_to 'TestGuru', root_path %> |
        <%= link_to 'SignIN', login_path, method: :get %>|
        <%= link_to 'SignUP', signup_path, method: :get %>
      </div>
        </div>
  <% end %>

  <%= yield %>
  <%= render 'layouts/footer' %>
</div>
</body>
</html>
