<!DOCTYPE html>
<html>
<head>
  <title>TestGuru</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">
  <% if user_signed_in? %>
      <p class="nav user">
        Welcome, <b><%= current_user.first_name || current_user.email %></b> Guru |
        <%= link_to 'TestGuru', root_path %> |
        <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
      </div>
      <% else %>
      <p class="nav user">
        <%= link_to 'TestGuru', root_path %> |
        <%= link_to 'SignIN', new_user_session_path, method: :get %>|
        <%= link_to 'SignUP', new_user_registration_path, method: :get %>
      </p>
        </div>
  <% end %>

  <%= render 'shared/flash' %>
  <%= yield %>
  <%= render 'layouts/footer' %>
</div>
</body>
</html>
