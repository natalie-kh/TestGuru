<h1><%= t('.header')%></h1>
<p>
  <%= link_to t('links.new_badge'), new_admin_badge_path %>
</p>

<% if @badges.present? %>
<table class="table">
    <tr>
      <th scope="col"><%= t('.name')%></th>
      <th scope="col"><%= t('.description')%></th>
      <th scope="col"><%= t('.rule')%></th>
      <th scope="col"><%= t('.rule_value')%></th>
      <th colspan="3"><%= t('.action')%></th>
    </tr>
    <%= render @badges %>
<% else %>
  <p><%= t('.empty_badge_list')%></p>
<% end %>
</table>
