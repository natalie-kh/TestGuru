<h1>Badges</h1>
<p>
  <%= link_to 'New Badge', new_admin_badge_path %>
</p>

<% if @badges.present? %>
<table class="table">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Rule</th>
      <th scope="col">Rule value</th>
      <th colspan="3">Actions</th>
    </tr>
    <%= render @badges %>
<% else %>
  <p>No Badges yet</p>
<% end %>
</table>
