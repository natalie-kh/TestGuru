<tr>
  <td class="align-middle"><%= badge.name %></td>
  <td class="align-middle"><%= badge.description %></td>
  <td class="align-middle"><%= badge.rule %></td>
  <td class="align-middle"><%= badge.rule_value %></td>
  <td class="align-middle"><%= link_to t('links.show'), admin_badge_path(badge) %></td>
  <td class="align-middle">
    <%= link_to t('links.edit'),
                edit_admin_badge_path(badge) %>
  </td>
  <td class="align-middle">
    <%= link_to t('links.delete'),
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: t('links.delete_confirmation') } %>
  </td>
</tr>