<h1>Tests</h1>
<p>
  <%= link_to 'New Test', new_test_path%>
</p>

<% if @tests.present? %>
    <table>
      <tr>
        <th>Title</th>
        <th>Level</th>
        <th>Questions</th>
        <th colspan="4">Actions</th>
      </tr>
      <%= render @tests %>
<% else %>
    <p>No tests yet</p>
<% end %>
</table>