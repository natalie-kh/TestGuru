<h2><%= t('.header', resource: resource_name.to_s.humanize) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label t('.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: t('.email') %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label t('.new_password') %> <i><%= t('.blank_password_instruction')%></i><br />
    <%= f.password_field :password, autocomplete: t('.new_password') %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('.min_password_length', min: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label t('.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: t('.password_confirmation') %>
  </div>

  <div class="field">
    <%= f.label t('.current_password') %> <i><%= t('.current_password_instruction')%></i><br />
    <%= f.password_field :current_password, autocomplete: t('.current_password') %>
  </div>

  <div class="actions">
    <%= f.submit t('.action') %>
  </div>
<% end %>

<h3><%= f.submit t('.cancel_my_account') %></h3>

<p> <%= t('.unhappy') %>  <%=button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %></p>

<%= link_to t('links.back'), :back %>
