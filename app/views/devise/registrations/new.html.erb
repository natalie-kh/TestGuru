<h2><%= t('.header') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label t('.first_name') %><br />
      <%= f.text_field :first_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label t('.last_name') %><br />
      <%= f.text_field :last_name, autofocus: true%>
    </div>

    <div class="field">
      <%= f.label t('.email') %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: t('.email') %>
    </div>

    <div class="field">
      <%= f.label t('.new_password') %>
      <% if @minimum_password_length %>
          <em>(<%= t('.min_password_length', min: @minimum_password_length) %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: t('.new_password') %>
    </div>

    <div class="field">
      <%= f.label t('.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: t('.password_confirmation') %>
    </div>

    <div class="actions">
      <%= f.submit t('.header') %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
