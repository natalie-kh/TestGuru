<h2><%= t('.header') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label t('.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: t('.email') %>
  </div>

  <div class="field">
    <%= f.label t('.current_password') %><br />
    <%= f.password_field :password, autocomplete: t('.current_password') %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t('.remember_me') %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.header') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
