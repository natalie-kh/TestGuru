<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2><%= t('.header') %></h2>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <p>
                <%= f.label t('.email') %>
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('.email_placeholder') %>
              </p>

              <p>

                <%= f.label t('.current_password') %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('.password_placeholder') %>
              </p>

              <% if devise_mapping.rememberable? %>

                  <div class="form-check">
                    <%= f.label :remember_me, class: 'form-check-label' do %>
                        <%= f.check_box :remember_me, class: 'form-check-input' %>
                        <%= t('.remember_me') %>
                    <% end %>
                  </div>
              <% end %>

              <%= f.submit t('.login_button'), class: 'btn btn-primary' %>
            </div>
        <% end %>
      </div>
    </div>

    <div class="mt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
