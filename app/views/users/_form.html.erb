<%= form_with model: @user, local: true do |form| %>
    <%= render 'shared/errors', resource: @user %>

    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name, placeholder: 'Enter Your Name' , id: :user_name %>
    </p>

    <p>
      <%= form.label :email %><br>
      <%= form.text_field :email, placeholder: 'Enter Your Email' , id: :user_email %>
    </p>

    <p>
      <%= form.label :password %><br>
      <%= form.password_field :password, placeholder: 'Password' , id: :user_password %>
    </p>

    <p>
      <%= form.label :password_confirmation %><br>
      <%= form.password_field :password_confirmation, placeholder: 'Password Confirmation' , id: :user_password_confirmation %>
    </p>

    <p><%= form.submit %></p>
<% end %>